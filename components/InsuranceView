
import React, { useMemo } from 'react';
import { InventoryItem, Category } from '../types';
import { PieChart, Pie, Cell, ResponsiveContainer, Tooltip, BarChart, Bar, XAxis, YAxis } from 'recharts';
import { ShieldCheck, TrendingUp, Download, FileText, Home, LayoutGrid, ChevronRight } from 'lucide-react';

interface InsuranceViewProps {
  items: InventoryItem[];
  policyLimit: number;
  onGenerateReport: (type: 'INSURANCE') => void;
}

// High contrast, vibrant palette
const COLORS = ['#8b5cf6', '#ec4899', '#f59e0b', '#10b981', '#3b82f6', '#ef4444', '#14b8a6'];

// Move Tooltip outside to prevent re-creation on render and avoid parser confusion
const CustomTooltip = ({ active, payload, label }: any) => {
  if (active && payload && payload.length) {
    return (
      <div className="bg-white p-3 border border-slate-100 shadow-xl rounded-xl z-50">
        <p className="font-bold text-slate-800 mb-1">{label || payload[0].name}</p>
        <p className="text-indigo-600 font-semibold">
          ${payload[0].value.toLocaleString()}
        </p>
      </div>
    );
  }
  return null;
};

export const InsuranceView: React.FC<InsuranceViewProps> = ({ items, policyLimit, onGenerateReport }) => {
  
  const stats = useMemo(() => {
    const totalValue = items.reduce((acc, item) => acc + item.value, 0);
    
    // Category Data for Pie Chart
    const categoryData = Object.values(Category).map(cat => {
      const catItems = items.filter(i => i.category === cat);
      return {
        name: cat,
        value: catItems.reduce((acc, i) => acc + i.value, 0),
        count: catItems.length
      };
    }).filter(d => d.value > 0)
      .sort((a, b) => b.value - a.value);

    // Room Data for Bar Chart
    const roomMap: Record<string, number> = {};
    items.forEach(item => {
      const r = item.room || 'Other';
      roomMap[r] = (roomMap[r] || 0) + item.value;
    });
    
    const roomData = Object.entries(roomMap)
      .map(([name, value]) => ({ name, value }))
      .sort((a, b) => b.value - a.value)
      .slice(0, 5); // Top 5 rooms

    return { totalValue, categoryData, roomData };
  }, [items]);

  const coveragePct = Math.min((stats.totalValue / policyLimit) * 100, 100);
  const isUnderInsured = stats.totalValue > policyLimit;
  const remainingCoverage = Math.max(policyLimit - stats.totalValue, 0);

  return (
    <div className="space-y-6 pb-24 animate-in fade-in duration-500">
      <div className="flex items-center justify-between px-1">
        <div>
          <h2 className="text-2xl font-bold text-slate-900">Analytics</h2>
          <p className="text-slate-500 text-xs font-medium">Home Value & Coverage Insights</p>
        </div>
        <button 
          onClick={() => onGenerateReport('INSURANCE')}
          className="text-xs font-bold text-white bg-indigo-600 hover:bg-indigo-700 px-4 py-2 rounded-full flex items-center gap-2 shadow-lg shadow-indigo-200 active:scale-95 transition-transform"
        >
          <Download size={14} />
          PDF
        </button>
      </div>

      {/* Insurance Health Card - Colorful Gradient */}
      <div className="bg-gradient-to-br from-violet-600 via-indigo-600 to-blue-600 rounded-3xl p-6 text-white shadow-2xl shadow-indigo-200 relative overflow-hidden">
        {/* Decorative Circles */}
        <div className="absolute top-0 right-0 w-64 h-64 bg-white opacity-10 rounded-full -translate-y-1/2 translate-x-1/3 blur-3xl"></div>
        <div className="absolute bottom-0 left-0 w-32 h-32 bg-pink-400 opacity-20 rounded-full translate-y-1/2 -translate-x-1/3 blur-2xl"></div>

        <div className="relative z-10">
          <div className="flex items-center justify-between mb-6">
            <div className="flex items-center gap-2 bg-white/20 backdrop-blur-md pl-2 pr-3 py-1 rounded-full border border-white/10">
               <ShieldCheck size={16} className={isUnderInsured ? "text-red-300" : "text-emerald-300"} />
               <span className="text-xs font-bold tracking-wide uppercase">
                 {isUnderInsured ? 'Review Needed' : 'Protected'}
               </span>
            </div>
            <div className="text-white/80 bg-white/10 p-2 rounded-full">
              <TrendingUp size={18} />
            </div>
          </div>
          
          <div className="mb-8">
            <div className="text-indigo-100 text-sm font-medium mb-1 uppercase tracking-wider opacity-80">Total Inventory Value</div>
            <div className="text-5xl font-bold tracking-tighter text-white drop-shadow-sm">
              ${stats.totalValue.toLocaleString()}
            </div>
            <div className="flex items-center gap-2 mt-3">
              <div className="text-xs font-medium text-indigo-100 bg-indigo-800/40 inline-block px-3 py-1 rounded-lg border border-indigo-400/30">
                Limit: ${policyLimit.toLocaleString()}
              </div>
            </div>
          </div>

          <div className="space-y-2 bg-black/10 p-4 rounded-2xl border border-white/5 backdrop-blur-sm">
            <div className="flex justify-between text-xs font-bold text-indigo-100 mb-1">
               <span>Coverage Utilization</span>
               <span>{Math.round(coveragePct)}%</span>
            </div>
            <div className="w-full h-3 bg-black/20 rounded-full overflow-hidden border border-white/5">
              <div 
                className={`h-full rounded-full transition-all duration-1000 ease-out ${isUnderInsured ? 'bg-red-400' : 'bg-emerald-400'}`}
                style={{ width: `${coveragePct}%` }} 
              />
            </div>
            <div className="text-center mt-1">
               <span className="text-[10px] font-medium text-indigo-200">
                 {isUnderInsured 
                   ? `Exceeds limit by $${(stats.totalValue - policyLimit).toLocaleString()}` 
                   : `$${remainingCoverage.toLocaleString()} remaining before limit`}
               </span>
            </div>
          </div>
        </div>
      </div>

      {/* Cost Per Room Bar Chart */}
      <div className="bg-white rounded-3xl p-6 shadow-lg shadow-slate-200/50 border border-slate-100">
        <div className="flex items-center justify-between mb-6">
          <div className="flex items-center gap-3">
            <div className="bg-orange-100 p-2.5 rounded-xl text-orange-600">
               <Home size={20} />
            </div>
            <div>
              <h3 className="font-bold text-slate-800">Cost per Room</h3>
              <p className="text-xs text-slate-400">Top 5 most valuable spaces</p>
            </div>
          </div>
        </div>
        
        <div className="h-64 w-full">
          <ResponsiveContainer width="100%" height="100%">
            <BarChart data={stats.roomData} layout="vertical" margin={{ top: 0, right: 30, left: 0, bottom: 0 }}>
              <XAxis type="number" hide />
              <YAxis 
                dataKey="name" 
                type="category" 
                width={90} 
                tick={{fontSize: 11, fill: '#475569', fontWeight: 600}} 
                axisLine={false}
                tickLine={false}
              />
              <Tooltip cursor={{fill: '#f8fafc'}} content={<CustomTooltip />} />
              <Bar dataKey="value" radius={[0, 6, 6, 0]} barSize={24}>
                {stats.roomData.map((entry, index) => (
                  <Cell key={`cell-${index}`} fill={COLORS[index % COLORS.length]} />
                ))}
              </Bar>
            </BarChart>
          </ResponsiveContainer>
        </div>
      </div>

      {/* Category Breakdown Chart */}
      {stats.categoryData.length > 0 && (
        <div className="bg-white rounded-3xl p-6 shadow-lg shadow-slate-200/50 border border-slate-100">
          <div className="flex items-center gap-3 mb-4">
            <div className="bg-pink-100 p-2.5 rounded-xl text-pink-600">
              <LayoutGrid size={20} />
            </div>
            <div>
              <h3 className="font-bold text-slate-800">Category Breakdown</h3>
              <p className="text-xs text-slate-400">Value distribution by type</p>
            </div>
          </div>
          
          <div className="flex flex-col items-center">
            <div className="h-64 w-full relative">
              <ResponsiveContainer width="100%" height="100%">
                <PieChart>
                  <Pie
                    data={stats.categoryData}
                    cx="50%"
                    cy="50%"
                    innerRadius={70}
                    outerRadius={95}
                    paddingAngle={4}
                    dataKey="value"
                    cornerRadius={6}
                    stroke="none"
                  >
                    {stats.categoryData.map((entry, index) => (
                      <Cell key={`cell-${index}`} fill={COLORS[index % COLORS.length]} />
                    ))}
                  </Pie>
                  <Tooltip content={<CustomTooltip />} />
                </PieChart>
              </ResponsiveContainer>
              {/* Center Text */}
              <div className="absolute inset-0 flex flex-col items-center justify-center pointer-events-none">
                 <span className="text-xs text-slate-400 font-bold uppercase tracking-widest mb-1">Top</span>
                 <span className="text-sm font-bold text-slate-900 truncate max-w-[100px]">{stats.categoryData[0].name}</span>
              </div>
            </div>
            
            <div className="w-full mt-4 grid grid-cols-2 gap-3">
               {stats.categoryData.slice(0, 6).map((cat, idx) => (
                 <div key={cat.name} className="flex items-center gap-2 text-xs bg-slate-50 p-2.5 rounded-xl border border-slate-100 hover:border-slate-200 transition-colors">
                   <div className="w-3 h-3 rounded-full flex-shrink-0 shadow-sm" style={{ backgroundColor: COLORS[idx % COLORS.length] }} />
                   <div className="flex-1 min-w-0">
                     <div className="font-semibold text-slate-700 truncate">{cat.name}</div>
                     <div className="text-slate-500 font-mono">${cat.value.toLocaleString()}</div>
                   </div>
                 </div>
               ))}
            </div>
          </div>
        </div>
      )}

      {/* Export Action */}
      <div 
        onClick={() => onGenerateReport('INSURANCE')}
        className="group bg-gradient-to-r from-slate-800 to-slate-900 rounded-2xl p-4 shadow-lg shadow-slate-900/20 flex items-center gap-4 cursor-pointer transform transition-all active:scale-[0.98]" 
      >
         <div className="bg-white/10 p-3 rounded-xl text-white group-hover:bg-white/20 transition-colors">
            <FileText size={24} />
         </div>
         <div className="flex-1">
            <h4 className="text-sm font-bold text-white">Download Report</h4>
            <p className="text-xs text-slate-400 mt-0.5">Get a detailed manifest for your insurance provider.</p>
         </div>
         <div className="bg-white text-slate-900 p-2 rounded-full opacity-80 group-hover:opacity-100 transition-opacity">
            <ChevronRight size={16} />
         </div>
      </div>
    </div>
  );
};
