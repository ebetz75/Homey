
import React, { useMemo } from 'react';
import { InventoryItem, Category } from '../types';
import { PieChart, Pie, Cell, ResponsiveContainer, Tooltip, BarChart, Bar, XAxis, YAxis, CartesianGrid } from 'recharts';
import { ShieldCheck, TrendingUp, Download, FileText, AlertTriangle, Home, LayoutGrid } from 'lucide-react';

interface InsuranceViewProps {
  items: InventoryItem[];
  policyLimit: number;
  onGenerateReport: (type: 'INSURANCE') => void;
}

// Vibrant palette
const COLORS = ['#6366f1', '#ec4899', '#f59e0b', '#10b981', '#8b5cf6', '#3b82f6', '#ef4444', '#14b8a6'];

export const InsuranceView: React.FC<InsuranceViewProps> = ({ items, policyLimit, onGenerateReport }) => {
  
  const stats = useMemo(() => {
    const totalValue = items.reduce((acc, item) => acc + item.value, 0);
    
    // Category Data for Pie Chart
    const categoryData = Object.values(Category).map(cat => {
      const catItems = items.filter(i => i.category === cat);
      return {
        name: cat,
        value: catItems.reduce((acc, i) => acc + i.value, 0),
        count: catItems.length
      };
    }).filter(d => d.value > 0)
      .sort((a, b) => b.value - a.value);

    // Room Data for Bar Chart
    const roomMap: Record<string, number> = {};
    items.forEach(item => {
      const r = item.room || 'Other';
      roomMap[r] = (roomMap[r] || 0) + item.value;
    });
    
    const roomData = Object.entries(roomMap)
      .map(([name, value]) => ({ name, value }))
      .sort((a, b) => b.value - a.value)
      .slice(0, 5); // Top 5 rooms

    return { totalValue, categoryData, roomData };
  }, [items]);

  const coveragePct = Math.min((stats.totalValue / policyLimit) * 100, 100);
  const isUnderInsured = stats.totalValue > policyLimit;
  const remainingCoverage = Math.max(policyLimit - stats.totalValue, 0);

  // Custom Tooltip for Charts
  const CustomTooltip = ({ active, payload, label }: any) => {
    if (active && payload && payload.length) {
      return (
        <div className="bg-white p-3 border border-slate-100 shadow-xl rounded-xl">
          <p className="font-bold text-slate-800 mb-1">{label || payload[0].name}</p>
          <p className="text-indigo-600 font-semibold">
            ${payload[0].value.toLocaleString()}
          </p>
        </div>
      );
    }
    return null;
  };

  return (
    <div className="space-y-6 pb-24 animate-in fade-in duration-500">
      <div className="flex items-center justify-between px-1">
        <div>
          <h2 className="text-2xl font-bold text-slate-800">Analysis</h2>
          <p className="text-slate-500 text-xs font-medium">Home Value & Coverage</p>
        </div>
        <button 
          onClick={() => onGenerateReport('INSURANCE')}
          className="text-xs font-bold text-white bg-slate-900 px-4 py-2 rounded-full flex items-center gap-2 shadow-lg shadow-slate-900/20 active:scale-95 transition-transform"
        >
          <Download size={14} />
          Report
        </button>
      </div>

      {/* Insurance Health Card - Colorful Gradient */}
      <div className="bg-gradient-to-br from-indigo-600 via-purple-600 to-purple-800 rounded-3xl p-6 text-white shadow-xl shadow-indigo-500/30 relative overflow-hidden">
        {/* Decorative Circles */}
        <div className="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/3 blur-3xl"></div>
        <div className="absolute bottom-0 left-0 w-32 h-32 bg-indigo-400/30 rounded-full translate-y-1/2 -translate-x-1/3 blur-2xl"></div>

        <div className="relative z-10">
          <div className="flex items-center justify-between mb-6">
            <div className="flex items-center gap-2 bg-black/20 backdrop-blur-md pl-2 pr-3 py-1 rounded-full border border-white/10">
               <ShieldCheck size={16} className={isUnderInsured ? "text-red-300" : "text-emerald-300"} />
               <span className="text-xs font-bold tracking-wide uppercase">
                 {isUnderInsured ? 'Under Insured' : 'Protected'}
               </span>
            </div>
            <div className="text-white/80">
              <TrendingUp size={20} />
            </div>
          </div>
          
          <div className="mb-8 text-center">
            <div className="text-indigo-200 text-sm font-medium mb-1 uppercase tracking-wider">Total Asset Value</div>
            <div className="text-5xl font-bold tracking-tighter text-white drop-shadow-sm">
              ${stats.totalValue.toLocaleString()}
            </div>
            <div className="text-xs font-medium text-white/70 mt-2 bg-white/10 inline-block px-3 py-1 rounded-full">
              Policy Limit: ${policyLimit.toLocaleString()}
            </div>
          </div>

          <div className="space-y-2">
            <div className="flex justify-between text-xs font-bold text-indigo-100">
               <span>Coverage Used</span>
               <span>{Math.round(coveragePct)}%</span>
            </div>
            <div className="w-full h-3 bg-black/20 rounded-full overflow-hidden backdrop-blur-sm border border-white/5">
              <div 
                className={`h-full rounded-full transition-all duration-1000 ${isUnderInsured ? 'bg-red-400' : 'bg-emerald-400'}`}
                style={{ width: `${coveragePct}%` }} 
              />
            </div>
            <div className="text-center mt-2">
               <span className="text-[10px] font-medium text-indigo-200">
                 {isUnderInsured 
                   ? `You are over limit by $${(stats.totalValue - policyLimit).toLocaleString()}` 
                   : `$${remainingCoverage.toLocaleString()} coverage remaining`}
               </span>
            </div>
          </div>
        </div>
      </div>

      {/* Cost Per Room Bar Chart */}
      <div className="bg-white rounded-3xl p-5 shadow-sm border border-slate-100">
        <div className="flex items-center gap-2 mb-6">
          <div className="bg-orange-100 p-2 rounded-xl text-orange-600">
             <Home size={18} />
          </div>
          <h3 className="font-bold text-slate-800">Cost per Room</h3>
        </div>
        
        <div className="h-48 w-full">
          <ResponsiveContainer width="100%" height="100%">
            <BarChart data={stats.roomData} layout="vertical" margin={{ top: 0, right: 20, left: 0, bottom: 0 }}>
              <XAxis type="number" hide />
              <YAxis 
                dataKey="name" 
                type="category" 
                width={80} 
                tick={{fontSize: 10, fill: '#64748b', fontWeight: 600}} 
                axisLine={false}
                tickLine={false}
              />
              <Tooltip content={<CustomTooltip />} cursor={{fill: '#f1f5f9', radius: 8}} />
              <Bar dataKey="value" radius={[0, 4, 4, 0]} barSize={20}>
                {stats.roomData.map((entry, index) => (
                  <Cell key={`cell-${index}`} fill={COLORS[index % COLORS.length]} />
                ))}
              </Bar>
            </BarChart>
          </ResponsiveContainer>
        </div>
      </div>

      {/* Breakdown Chart */}
      {stats.categoryData.length > 0 && (
        <div className="bg-white rounded-3xl p-5 shadow-sm border border-slate-100">
          <div className="flex items-center gap-2 mb-2">
            <div className="bg-pink-100 p-2 rounded-xl text-pink-600">
              <LayoutGrid size={18} />
            </div>
            <h3 className="font-bold text-slate-800">Value by Category</h3>
          </div>
          
          <div className="flex flex-col items-center">
            <div className="h-56 w-full relative">
              <ResponsiveContainer width="100%" height="100%">
                <PieChart>
                  <Pie
                    data={stats.categoryData}
                    cx="50%"
                    cy="50%"
                    innerRadius={60}
                    outerRadius={80}
                    paddingAngle={5}
                    dataKey="value"
                    cornerRadius={6}
                    stroke="none"
                  >
                    {stats.categoryData.map((entry, index) => (
                      <Cell key={`cell-${index}`} fill={COLORS[index % COLORS.length]} />
                    ))}
                  </Pie>
                  <Tooltip content={<CustomTooltip />} />
                </PieChart>
              </ResponsiveContainer>
              {/* Center Text */}
              <div className="absolute inset-0 flex flex-col items-center justify-center pointer-events-none">
                 <span className="text-[10px] text-slate-400 font-bold uppercase tracking-widest">Top</span>
                 <span className="text-sm font-bold text-slate-800 truncate max-w-[100px]">{stats.categoryData[0].name}</span>
              </div>
            </div>
            
            <div className="w-full mt-2 grid grid-cols-2 gap-2">
               {stats.categoryData.slice(0, 6).map((cat, idx) => (
                 <div key={cat.name} className="flex items-center gap-2 text-xs bg-slate-50 p-2 rounded-lg border border-slate-100">
                   <div className="w-2 h-2 rounded-full flex-shrink-0" style={{ backgroundColor: COLORS[idx % COLORS.length] }} />
                   <div className="flex-1 min-w-0">
                     <div className="font-semibold text-slate-700 truncate">{cat.name}</div>
                     <div className="text-slate-400 font-mono">${cat.value.toLocaleString()}</div>
                   </div>
                 </div>
               ))}
            </div>
          </div>
        </div>
      )}

      {/* Actions */}
      <div className="bg-indigo-50 rounded-2xl p-4 border border-indigo-100 flex items-center gap-4 cursor-pointer hover:bg-indigo-100 transition-colors" onClick={() => onGenerateReport('INSURANCE')}>
         <div className="bg-indigo-600 p-3 rounded-xl text-white shadow-md shadow-indigo-200">
            <FileText size={24} />
         </div>
         <div className="flex-1">
            <h4 className="text-sm font-bold text-indigo-900">Export Insurance PDF</h4>
            <p className="text-xs text-indigo-600/80 mt-0.5">Detailed manifest for your provider.</p>
         </div>
         <div className="bg-white p-2 rounded-full text-indigo-600">
            <Download size={16} />
         </div>
      </div>
    </div>
  );
};
